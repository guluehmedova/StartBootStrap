@model List<Portfolio>
@{
    ViewData["Title"] = "Index";
    int count = (ViewBag.SelectedPage - 1) * 8;
    int totalpage = ViewBag.TotalPage;
}

<div class="container">
    <div class="row">
        <div class="col-12">
            <h1 style="display:inline-block">Portfolio Page</h1>
            <a class="btn btn-primary" style="float:right" asp-action="create">Create</a>
        </div>
        <div class="col-12">
            <table class="table table-success table-striped">
                <thead>
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Title</th>
                        <th scope="col">Image</th>
                        <th scope="col">Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (Portfolio item in Model)
                    {
                        count++;
                        <tr>
                            <th scope="row">@count</th>
                            <td>@item.Title</td>
                            <td>
                                <img width="100" src="~/uploads/portfolios/@item.Image" />
                            </td>
                            <td>
                                <a asp-action="edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a>
                                <a asp-action="delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>

            <div>
                <nav aria-label="Page navigation example">
                    <ul class="pagination">
                        <li class="page-item"><a class="page-link" href="#">Previous</a></li>
                        @for (int i = 1; i < totalpage; i++)
                        {
                            <li class="page-item"><a class="page-link" asp-action="index" asp-route-page="@i">@i</a></li>
                        }
                        <li class="page-item"><a class="page-link" href="#">Next</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </div>
</div>
